<Window x:Class="PhotoOrganizer.Views.PhotoOrganizerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhotoOrganizer" Height="800" Width="650">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Photo Organizer" FontWeight="ExtraBold" FontFamily="Calibri" FontSize="32" FontStyle="Italic" />
        <Button Margin="0,10,0,0" Height="40" Width="100" Content="Choose File" Command="{Binding SetDirectoryCommand}" CommandParameter="{Binding}" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.119" />
                    <GradientStop Color="#FFFF1D1D" Offset="0.956" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <WrapPanel>
            <Label Content="Selected Directory:" />
            <Label Content="{Binding SelectedDirectory}" />
        </WrapPanel>
    </StackPanel>
</Window>
